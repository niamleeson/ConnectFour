{{#modal-dialog 
  close="cancel"
  targetAttachment="center"
  translucentOverlay=true}}
  {{#if session.isAuthenticated}}
    <div class="dialog-content wider-dialog">
        <div class="dialog-body">
          <form>
            <div class="form-row">
              <label for="name">Save name</label>
              {{input value=saveObj.name}}
            </div>          
          </form>
          {{#if errorMessage}}
            {{errorMessage}}
          {{/if}}
        </div>
        <div class="dialog-footer">
          {{#ui/animated-button bigButton=true fillColor="#1976D2" clicked=(action "saveGame")}} Save game {{/ui/animated-button}}
          {{#ui/animated-button bigButton=true fillColor="#D2D0D0" clicked=(action "cancel")}} Cancel {{/ui/animated-button}}  
        </div>
      </div>  
  {{else}}
    Please sign in before trying to save the game.
  {{/if}}
  
{{/modal-dialog}}